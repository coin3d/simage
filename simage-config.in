#! /bin/sh
# **************************************************************************
# simage-config -- a utility for retrieving configuration information about
# the installed simage library.

me=`echo $0 | sed 's,^.*[/\\],,g'`

usage="\
Usage: $me [OPTIONS]
Options:
  --cppflags
  --ldflags
  --libs
  --build <program> <sourcefile> [<sourcefile>]...
  --version
  --usage | --help"

version="@SIMAGE_VERSION@"

# NOTE: If the first argument is changed in the following variables, it is
# also necessary to update configure.in, since that argument is shifted off.

cppflags="-I@includedir@ @SIMAGE_EXTRA_CPPFLAGS@"
ldflags="-L@libdir@ @SIMAGE_EXTRA_LDFLAGS@"
libs="-lsimage @SIMAGE_EXTRA_LIBS@"

while test $# -gt 0
do
  case $1 in
  --help | --usage)  echo "$usage"    ;;
  --version)         echo "$version"  ;;
  --cppflags)        echo "$cppflags" ;;
  --ldflags)         echo "$ldflags"  ;;
  --libs)            echo "$libs"     ;;
  --build)
    shift
    program=$1
    shift
    exec @CC@ \
      $CPPFLAGS $cppflags \
      $LDFLAGS $ldflags \
      -o $program $@ \
      $LIBS $libs
    ;;
  *)
    echo "$me: Invalid option: \"$1\""
    echo "$usage" >&2
    exit 1
    ;;
  esac
  shift
done

exit 0

